<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <entity type="valormobs:skullhaven_spirit">
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                                <vertical method="fixed">100</vertical>
                            </sizing>
                            <look-at-cursor>true</look-at-cursor>
                            <scale-to-fit>true</scale-to-fit>
                            <tooltip-text translate="true">entity.valormobs.skullhaven_spirit</tooltip-text>
                        </entity>
                        <label>
                            <text translate="true">text.valormobs.skullhaven_text_1</text>
                            <max-width>250</max-width>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                            <margins>
                                <right>5</right>
                            </margins>
                        </label>
                    </children>

                    <surface>
                        <tooltip/>
                    </surface>
                    <padding>
                        <all>6</all>
                    </padding>
                    <margins>
                        <bottom>7</bottom>
                    </margins>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <button id="previous-button">
                            <text>⏴ Previous</text>
                            <active>false</active>
                            <margins>
                                <right>2</right>
                            </margins>
                        </button>
                        <button id="next-button">
                            <text>Next ⏵</text>
                        </button>
                    </children>

                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                    <padding>
                        <all>6</all>
                    </padding>

                    <margins>
                        <bottom>7</bottom>
                    </margins>
                </flow-layout>
            </children>

            <surface>
                <vanilla-translucent/>
            </surface>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>bottom</vertical-alignment>
        </flow-layout>
    </components>
</owo-ui>
